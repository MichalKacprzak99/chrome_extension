{
  "name": "URLs copier",
  "description" : "Base Level Extension",
  "version": "1.0",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "hello_extensions.png"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+F"
      },
      "description": "Opens popup.html"
    },
    "copy_url": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+Y"
      },
      "description": "Copy url of highlighted tabs"
    }
  },
  "permissions": [
    "tabs",
    "clipboardWrite"
  ],
  "background": {
    "persistent": false,
    "page": "background.html"
  }
}